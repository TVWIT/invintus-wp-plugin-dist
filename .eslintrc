{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2024,
    "sourceType": "module"
  },
  "ignorePatterns": [
    "*.min.js"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "warn",
    "no-undef": "off",
    "space-in-parens": [
      "error",
      "always"
    ],
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ]
  },
  "overrides": [
    {
      "files": [
        "*.js",
        "*.ts",
        "*.tsx"
      ],
      "extends": [],
      "rules": {
        "indent": [
          "error",
          2
        ],
        "no-console": "warn"
      }
    }
  ]
}
